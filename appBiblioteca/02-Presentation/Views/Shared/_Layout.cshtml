<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>App Biblioteca</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    @Styles.Render("~/content/plugin/adminlte/bower_components/bootstrap/dist/css/bootstrap.min.css")
    <!-- Font Awesome -->
    @Styles.Render("~/content/plugin/adminlte/bower_components/font-awesome/css/font-awesome.min.css")
    <!-- Ionicons -->
    @Styles.Render("~/content/plugin/adminlte/bower_components/Ionicons/css/ionicons.min.css")
    <!-- Theme style -->
    @Styles.Render("~/content/plugin/adminlte/bower_components/select2/dist/css/select2.min.css")
    @Styles.Render("~/content/plugin/adminlte/dist/css/AdminLTE.min.css")
    <!-- AdminLTE Skins. Choose a skin from the css/skins folder instead of downloading all of them to reduce the load. -->
    @Styles.Render("~/content/plugin/adminlte/dist/css/skins/_all-skins.min.css")
    <!-- Morris chart -->
    @Styles.Render("~/content/plugin/adminlte/bower_components/morris.js/morris.css")
    <!-- jvectormap -->
    @Styles.Render("~/content/plugin/adminlte/bower_components/jvectormap/jquery-jvectormap.css")
    <!-- Date Picker -->
    @Styles.Render("~/content/plugin/adminlte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css")

    <!-- Daterange picker -->
    @Styles.Render("~/content/plugin/adminlte/bower_components/bootstrap-daterangepicker/daterangepicker.css")
    <!-- bootstrap wysihtml5 - text editor -->
    @Styles.Render("~/content/plugin/adminlte/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    @Styles.Render("~/content/plugin/sweetalert/sweetalert.css")
    @Styles.Render("~/content/plugin/formvalidation/formValidation.min.css")

    @Scripts.Render("~/content/plugin/sweetalert/sweetalert.min.js")
    @Scripts.Render("~/content/plugin/sweetalert/core-js.js")

    <!-- jQuery 3 -->
    @Scripts.Render("~/content/plugin/adminlte/bower_components/jquery/dist/jquery.min.js")
    <!-- jQuery UI 1.11.4 -->
    @Scripts.Render("~/content/plugin/adminlte/bower_components/jquery-ui/jquery-ui.min.js")
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        <header class="main-header">
            <!-- Logo -->
            <a href="#" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>BIBLIO</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Biblioteca</b></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>

                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@Url.Content("~/content/plugin/adminlte/dist/img/user2-160x160.jpg")" class="user-image" alt="User Image">
                                <span class="hidden-xs">@Session["nombre"].ToString().Split(' ')[0]</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="@Url.Content("~/content/plugin/adminlte/dist/img/user2-160x160.jpg")" class="img-circle" alt="User Image">

                                    <p>
                                        @Session["nombre"].ToString()
                                        <small>@Session["rolUsuario"].ToString()</small>
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="@Url.Action("Edit","Usuario")" class="btn btn-default btn-flat">Perfil</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="@Url.Action("Logout","Usuario")" class="btn btn-default btn-flat">Salir</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                       
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="@Url.Content("~/content/plugin/adminlte/dist/img/user2-160x160.jpg")" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p style="word-wrap:break-word; white-space: pre-wrap;">@Session["nombre"].ToString()</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">MENU</li>
                    <li><a href="@Url.Action("Index","Index")"><i class="fa fa-home"></i> <span>Inicio</span></a></li>
                    @if (_03_Helpers.PresentationHelper.Access.IsValidRol("Administrador"))
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-user"></i> <span>Usuarios</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="active"><a href="@Url.Action("Insert", "Usuario")"><i class="fa fa-circle-o"></i>Insertar</a></li>
                                <li class="active"><a href="@Url.Action("List", "Usuario")"><i class="fa fa-circle-o"></i>Lista de usuarios</a></li>
                            </ul>
                        </li>
                    }

                    @if (_03_Helpers.PresentationHelper.Access.IsValidRol("Administrador,Bibliotecario"))
                    {
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tasks"></i> <span>Categorias</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active"><a href="@Url.Action("Insert", "Categoria")"><i class="fa fa-circle-o"></i>Insertar</a></li>
                            <li class="active"><a href="@Url.Action("List", "Categoria")"><i class="fa fa-circle-o"></i>Lista de categorias</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tasks"></i> <span>Carreras</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active"><a href="@Url.Action("Insert", "Carrera")"><i class="fa fa-circle-o"></i>Insertar</a></li>
                            <li class="active"><a href="@Url.Action("List", "Carrera")"><i class="fa fa-circle-o"></i>Lista de Carreras</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tasks"></i> <span>Libros</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active"><a href="@Url.Action("Insert", "Libro")"><i class="fa fa-circle-o"></i>Insertar</a></li>
                            <li class="active"><a href="@Url.Action("List", "Libro")"><i class="fa fa-circle-o"></i>Lista de Libros</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tasks"></i> <span>Autores</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active"><a href="@Url.Action("Insert", "Autor")"><i class="fa fa-circle-o"></i>Insertar</a></li>
                            <li class="active"><a href="@Url.Action("List", "Autor")"><i class="fa fa-circle-o"></i>Lista de Autores</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tasks"></i> <span>Asignar Libro a Autor</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active"><a href="@Url.Action("Insert", "LibroAutor")"><i class="fa fa-circle-o"></i>Asignar</a></li>
                            <li class="active"><a href="@Url.Action("List", "LibroAutor")"><i class="fa fa-circle-o"></i>Lista de Autores con libros</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tasks"></i> <span>Asignar Categoria a Libro</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active"><a href="@Url.Action("Insert", "LibroCategoria")"><i class="fa fa-circle-o"></i>Asignar</a></li>
                            <li class="active"><a href="@Url.Action("List", "LibroCategoria")"><i class="fa fa-circle-o"></i>Lista de libros con categorias</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tasks"></i> <span>Prestamo</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active"><a href="@Url.Action("Insert", "Prestamo")"><i class="fa fa-circle-o"></i>Nuevo</a></li>                            
                        </ul>
                    </li>
                    }
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tasks"></i> <span>Reportes</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active"><a href="@Url.Action("List","Prestamo")"><i class="fa fa-circle-o"></i>Lista de prestamos</a></li>
                            <li class="active"><a href="@Url.Action("List","Devolucion")"><i class="fa fa-circle-o"></i>Lista de devoluciones</a></li>
                        </ul>
                    </li>
                    
                    <li><a><i></i> <span></span></a></li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @(ViewBag.title != null ? ViewBag.title : "")
                    <small>@(ViewBag.subTitle != null ? ViewBag.subTitle : "")</small>
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">
                @if (TempData["mensajeGlobal"] != null)
                {
                    <script>
                        var injectHtml = '';
                    @foreach( string item in TempData["mensajeGlobal"] as List<string>)
                    {
                        <text>
                        injectHtml += '<div>' + "@item"  +'</div>';
                        </text>

                    }
                    swal('@(((bool)TempData["correcto"])== true ? "Correcto" : "Error")', injectHtml, '@(((bool)TempData["correcto"]) == true ? "success" : "error")');
                    </script>
                }
                <!-- Main row -->
                <div class="row">
                    <div id="contenedorGeneral"></div>
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
                <!-- /.row (main row) -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright © 2018 - Unamba</strong>
        </footer>

    </div>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
		$.widget.bridge('uibutton', $.ui.button);
    </script>
    <!-- Bootstrap 3.3.7 -->
    @Scripts.Render("~/content/plugin/adminlte/bower_components/bootstrap/dist/js/bootstrap.min.js")
    <!-- Morris.js charts -->

    @Scripts.Render("~/content/plugin/adminlte/bower_components/select2/dist/js/select2.full.min.js")
    @Scripts.Render("~/content/plugin/adminlte/bower_components/raphael/raphael.min.js")
    @Scripts.Render("~/content/plugin/adminlte/bower_components/morris.js/morris.min.js")
    <!-- Sparkline -->
    @Scripts.Render("~/content/plugin/adminlte/bower_components/jquery-sparkline/dist/jquery.sparkline.min.js")
    <!-- jvectormap -->
    @Scripts.Render("~/content/plugin/adminlte/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js")
    @Scripts.Render("~/content/plugin/adminlte/plugins/jvectormap/jquery-jvectormap-world-mill-en.js")
    <!-- jQuery Knob Chart -->
    @Scripts.Render("~/content/plugin/adminlte/bower_components/jquery-knob/dist/jquery.knob.min.js")
    <!-- daterangepicker -->
    @Scripts.Render("~/content/plugin/adminlte/bower_components/moment/min/moment.min.js")
    @Scripts.Render("~/content/plugin/adminlte/bower_components/bootstrap-daterangepicker/daterangepicker.js")
    <!-- datepicker -->
    @Scripts.Render("~/content/plugin/adminlte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js")
    <!-- Bootstrap WYSIHTML5 -->
    @Scripts.Render("~/content/plugin/adminlte/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js")
    <!-- Slimscroll -->
    @Scripts.Render("~/content/plugin/adminlte/bower_components/jquery-slimscroll/jquery.slimscroll.min.js")
    <!-- FastClick -->
    @Scripts.Render("~/content/plugin/adminlte/bower_components/fastclick/lib/fastclick.js")
    <!-- AdminLTE App -->
    @Scripts.Render("~/content/plugin/adminlte/dist/js/adminlte.min.js")

    @Scripts.Render("~/content/plugin/formvalidation/formValidation.min.js")
    @Scripts.Render("~/content/plugin/formvalidation/bootstrap.validation.min.js")

    <script>
		$(function()
		{
			$('input').attr('autocomplete', 'off');
		});
    </script>
</body>
</html>